# Server Configuration
PORT=3001

# Anthropic API (for AI question generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Adobe Learning Manager API (Optional - for admin access fallback)
# These are only needed if you want the backend to fetch course details
# when native extension tokens don't work
ALM_CLIENT_ID=your_alm_client_id
ALM_CLIENT_SECRET=your_alm_client_secret
ALM_ADMIN_REFRESH_TOKEN=your_alm_admin_refresh_token

# CORS Configuration
ALLOWED_ORIGINS=https://learningmanager.adobe.com,https://yourdomain.com